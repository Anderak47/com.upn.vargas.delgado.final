<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearDuelista">

  <EditText
      android:id="@+id/et_nombre_duelista"
      android:layout_width="377dp"
      android:layout_height="59dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:hint="Nombre de la cuenta" />

  <Button
      android:id="@+id/btn_registrar_duelista"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/et_nombre_duelista"
      android:layout_centerHorizontal="true"
      android:text="Registrar Duelista"
      android:layout_marginTop="16dp" />

</RelativeLayout>